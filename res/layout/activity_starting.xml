<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyBlue"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/firstScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="@color/brightPink"
        android:text="@string/firstScreenButtonText" />

    <TextView
        android:id="@+id/firstScreenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstScreenButton"
        android:layout_marginTop="24dp"
        android:text="@string/firstScreenLabelText" />

</RelativeLayout>